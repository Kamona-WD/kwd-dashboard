                {{> partials/loading-screen }}

                {{> partials/sidebar }}

                <div class="h-full flex-1 flex flex-col">
                    {{> partials/navbar }}

                    <!-- Page header -->
                    <header
                        class="flex-shrink-0 flex items-center justify-between border-b px-4 py-4 dark:border-primary-darker lg:py-6"
                    >
                        {{> header }}
                    </header>

                    <!-- Main content -->
                    <main class="flex-1">
                        <!-- Content -->
                        {{> @partial-block }}
                    </main>

                    {{> partials/footer }}
                </div>

